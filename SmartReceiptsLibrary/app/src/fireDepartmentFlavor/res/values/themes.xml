<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- All SDK 8 specific settings in here. *** Updated later versions in their styles folders -->
    <style name="Theme.SmartReceiptsBase" parent="Theme.AppCompat.Light.NoActionBar">

        <!--
		<item name="actionBarStyle">@style/Widget.SmartReceipts.ActionBar</item>
        <item name="popupMenuStyle">@style/Widget.SmartReceipts.PopupMenu</item>
        <item name="android:windowBackground">@color/dark_purple</item> -->

        <!-- Define the app theme colors for Lollipop (and above) -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/smart_receipts_colorPrimary</item>
        <item name="colorPrimaryDark">@color/smart_receipts_colorPrimaryDark</item>
        <item name="colorAccent">@color/smart_receipts_colorAccent</item>
        <item name="alertDialogStyle">@style/Theme.SmartReceiptsBase.Dialog</item>
        <item name="android:spinnerStyle">@style/Widget.AppCompat.Spinner.Underlined</item>
    </style>

    <style name="Theme.SmartReceiptsBase.Dialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/smart_receipts_colorPrimary</item>
        <item name="colorPrimaryDark">@color/smart_receipts_colorPrimaryDark</item>
        <item name="colorAccent">@color/smart_receipts_colorAccent</item>
        <item name="android:spinnerStyle">@style/Widget.AppCompat.Spinner.Underlined</item>
    </style>

    <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    <style name="Theme.SmartReceipts" parent="Theme.SmartReceiptsBase">
        <item name="android:popupMenuStyle">@style/Widget.SmartReceipts.PopupMenu</item>
        <item name="android:windowBackground">@color/window_background_color</item>
    </style>

    <style name="Theme.SmartReceipts.Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:elevation">4dp</item>
    </style>

</resources>
